<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#0F111A" Foreground="#ECEFF1"
    FontFamily="Segoe UI Variable Display, Segoe UI, Arial">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryAccent" Color="#00A3FF"/>
        <SolidColorBrush x:Key="SidebarBg" Color="#161922"/>
        <SolidColorBrush x:Key="CardBg" Color="#1E222D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BadgeAppliedColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="BadgeDefaultColor" Color="#999999"/>
        
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00A3FF" Offset="0"/>
            <GradientStop Color="#0080CC" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B35" Offset="0"/>
            <GradientStop Color="#E55100" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4CAF50" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="12,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#00A3FF" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1E5A7A"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="Border" Property="Background" Value="#0D3A52"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#00A3FF"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryAccent}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryActionBtn" TargetType="Button">
            <Setter Property="Background" Value="#0F111A"/>
            <Setter Property="Foreground" Value="#00A3FF"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#00A3FF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#1E5A7A"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter Property="Foreground" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#0D3A52"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="#00A3FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Popup OK Button Style -->
        <Style x:Key="PopupOKButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0F111A"/>
            <Setter Property="Foreground" Value="#00A3FF"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="#00A3FF" BorderThickness="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#1E5A7A"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter Property="Foreground" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#0D3A52"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="#00A3FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Thin vertical scrollbar style for modern look -->
        <!-- Custom Scrollbar Style -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#00A3FF" CornerRadius="5" Margin="2.5,0,2.5,0" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ThinVerticalScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Border Background="#1A1E2E" CornerRadius="5" Margin="1,25,1,25" VerticalAlignment="Stretch" />
                            <Track x:Name="PART_Track" IsDirectionReversed="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Background="Transparent" Height="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Background="Transparent" Height="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Foreground" Value="#ECEFF1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="CheckBoxBorder" 
                                    Width="24" 
                                    Height="24"
                                    Background="#0F111A" 
                                    BorderBrush="#00A3FF" 
                                    BorderThickness="2" 
                                    CornerRadius="6"
                                    Padding="0">
                                <TextBlock x:Name="CheckMark" 
                                           Text="&#xE73E;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#1A1F2E"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#00A3FF"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00A3FF"/>
                                <Setter TargetName="CheckMark" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0080CC"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#0080CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Style - Simple Circle Indicator -->
        <Style x:Key="AppliedBadge" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BadgeAppliedColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Visible"/>
        </Style>
        
        <Style x:Key="DefaultBadge" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BadgeDefaultColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Visible"/>
        </Style>

        <!-- Tab Button Style to match navbar -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#252A37"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#252A37"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#1E5A7A"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#00D4FF"/>
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="TabBorder" Property="Background" Value="#00A3FF"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#00A3FF"/>
                                <Setter TargetName="TabBorder" Property="BorderThickness" Value="2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Select All Button Style -->
        <Style x:Key="SelectAllButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="SelectAllBorder" Background="#00A3FF" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SelectAllBorder" Property="Background" Value="#00D4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="SelectAllBorder" Property="Background" Value="#0080CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </UserControl.Resources>

    <Grid x:Name="RootContainer">
        <!-- Main Content -->
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBg}" BorderBrush="#252A37" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo Section -->
                <StackPanel Orientation="Horizontal" Margin="20,30,0,50">
                    <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/PC%20Tweaks.png" Width="36" Height="36" Margin="0,0,14,0" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="GS" VerticalAlignment="Center" FontWeight="Black" FontSize="16"/>
                        <TextBlock Text="Tweaker" VerticalAlignment="Center" FontSize="10" Foreground="#00A3FF" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Items -->
                <Button x:Name="BtnNavGaming" Style="{StaticResource SidebarButton}" Tag="Gaming" Margin="8,6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="#00A3FF" Margin="0,0,12,0" Width="24"/>
                        <TextBlock Text="System Tweaks" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnNavApex" Style="{StaticResource SidebarButton}" Tag="Apex" Margin="8,6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="24" Margin="-4,0,12,0" VerticalAlignment="Center">
                            <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/Apex%20Logo.png" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Apex Optimization" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnNavOBS" Style="{StaticResource SidebarButton}" Tag="OBS" Margin="8,6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="24" Margin="-3,0,12,0" VerticalAlignment="Center">
                            <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/OBS.png" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="OBS Presets" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnNavNvidia" Style="{StaticResource SidebarButton}" Tag="Nvidia" Margin="8,6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="24" Height="24" Margin="0,0,12,0">
                            <Canvas Width="384.195" Height="282.809">
                                <Path Fill="#76B900" Data="M82.211 102.414s22.504-33.203 67.437-36.638V53.73c-49.769 3.997-92.867 46.149-92.867 46.149s24.41 70.564 92.867 77.026v-12.804c-50.237-6.32-67.437-61.687-67.437-61.687zm67.437 36.223v11.727c-37.968-6.77-48.507-46.237-48.507-46.237s18.23-20.195 48.507-23.47v12.867c-.023 0-.039-.007-.058-.007-15.891-1.907-28.305 12.938-28.305 12.938s6.958 24.99 28.363 32.182m0-107.125V53.73c1.461-.112 2.922-.207 4.391-.257 56.582-1.907 93.449 46.406 93.449 46.406s-42.343 51.488-86.457 51.488c-4.043 0-7.828-.375-11.383-1.005v13.739a75.04 75.04 0 0 0 9.481.612c41.051 0 70.738-20.965 99.484-45.778 4.766 3.817 24.278 13.103 28.289 17.167-27.332 22.884-91.031 41.33-127.144 41.33-3.481 0-6.824-.211-10.11-.528v19.306H305.68V31.512H149.648zm0 49.144V65.777c1.446-.101 2.903-.179 4.391-.226 40.688-1.278 67.382 34.965 67.382 34.965s-28.832 40.042-59.746 40.042c-4.449 0-8.438-.715-12.028-1.922V93.523c15.84 1.914 19.028 8.911 28.551 24.786l21.181-17.859s-15.461-20.277-41.524-20.277c-2.834-.001-5.545.198-8.207.483"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Nvidia Control" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="40">
            
            <StackPanel x:Name="SectionGaming" Visibility="Visible">
                <TextBlock Text="System Tweaks" FontSize="28" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Apply low-level kernel and registry tweaks to reduce input latency." 
                           Foreground="{StaticResource TextSecondary}" Margin="0,0,0,30"/>

                <!-- Tab Navigation -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Button x:Name="TabPerfTweaks" Style="{StaticResource TabButtonStyle}" Margin="0,0,12,0" Tag="Active" Content="Performance Tweaks"/>
                    <Button x:Name="TabPerfCleanup" Style="{StaticResource TabButtonStyle}" Margin="0,0,12,0" Content="Performance Cleanup"/>
                    <Button x:Name="TabServicesOpt" Style="{StaticResource TabButtonStyle}" Content="Services Optimization"/>
                </StackPanel>

                <!-- Performance Tweaks Content -->
                <StackPanel x:Name="ContentPerfTweaks" Visibility="Visible">
                <Border Background="{StaticResource CardBg}" CornerRadius="16" Padding="30" BorderBrush="#00A3FF" BorderThickness="2">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/Regedit.png" Width="32" Height="32" Margin="0,0,12,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="System Tweaks" FontSize="20" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBlock Text="Kernel and registry optimizations for minimal latency." FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                            <Border Grid.Column="1" Background="#00A3FF" CornerRadius="8" VerticalAlignment="Center" Margin="0,0,10,0">
                                <Button x:Name="BtnSelectAll" Style="{StaticResource SelectAllButtonStyle}" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" FontSize="13"/>
                                        <TextBlock Text="Select All"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                            <Border Grid.Column="2" Background="#FF6B6B" CornerRadius="8" VerticalAlignment="Center">
                                <Button x:Name="BtnResetTweaks" Style="{StaticResource SelectAllButtonStyle}" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" FontSize="13"/>
                                        <TextBlock Text="Reset All"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                            <Border Grid.Column="3" Background="#2196F3" CornerRadius="8" VerticalAlignment="Center" Margin="8,0,0,0">
                                <Button x:Name="BtnRefreshStatus" Style="{StaticResource SelectAllButtonStyle}" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" FontSize="13"/>
                                        <TextBlock Text="Refresh Status"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- Performance & Interrupts Section -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- IRQ8 Priority Card -->
                            <Border Grid.Column="0" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#00A3FF" BorderThickness="1.5" Margin="0,0,10,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Grid Margin="0,0,0,12">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/Regedit.png" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="IRQ8 Priority" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text="System Timer" FontSize="10" Foreground="#888"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <TextBlock Text="Forces the system timer to a higher interrupt priority for better responsiveness." FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="ChkIRQ" Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
                                    <Border Grid.Row="0" Grid.Column="1" x:Name="BadgeIRQ" Style="{StaticResource DefaultBadge}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                                </Grid>
                            </Border>

                            <!-- Network Interrupt Card -->
                            <Border Grid.Column="1" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#00A3FF" BorderThickness="1.5" Margin="10,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Grid Margin="0,0,0,12">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Image Source="file:///e:/Dev/GS%20-%20Tweaks/UI/Assets/Regedit.png" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="Network Interrupts" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text="Connectivity" FontSize="10" Foreground="#888"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <TextBlock Text="Stabilizes network interrupts for improved consistency and lower ping." FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="ChkNet" Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
                                    <Border Grid.Row="0" Grid.Column="1" x:Name="BadgeNET" Style="{StaticResource DefaultBadge}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- GPU & Fullscreen Section -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- GPU Scheduling Card -->
                            <Border Grid.Column="0" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#00A3FF" BorderThickness="1.5" Margin="0,0,10,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Grid Margin="0,0,0,12">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
