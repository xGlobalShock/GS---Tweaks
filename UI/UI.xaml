                                <Button x:Name="BtnDownloadOBSPro" Content="Download Preset" Style="{StaticResource PrimaryActionBtn}" Height="36" Padding="20,0" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
                
                <TextBlock x:Name="StatusText" Foreground="{StaticResource PrimaryAccent}" Margin="0,20,0,0" FontSize="14"/>
            </StackPanel>

            <StackPanel x:Name="SectionAbout" Visibility="Collapsed">
                <TextBlock Text="About GlobalShock Tweaker" FontSize="28" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="A modern, organized tool for applying system, game, and OBS tweaks." TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,30"/>

                <Border Background="{StaticResource CardBg}" CornerRadius="16" Padding="30" BorderBrush="#00A3FF" BorderThickness="2" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#00A3FF" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="What is GlobalShock?" FontSize="20" FontWeight="Bold" Margin="0,0,0,2"/>
                                <TextBlock Text="Your all-in-one tweaker solution" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="GlobalShock Tweaker is a comprehensive, modern toolkit designed for competitive gamers and performance enthusiasts. It consolidates system optimizations, game-specific configurations, and streaming setups into one intuitive interface." FontSize="12" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" Margin="0,0,0,24"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#00A3FF" BorderThickness="1.5" Margin="0,0,8,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE83B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#00A3FF" Margin="0,0,8,0"/>
                                        <TextBlock Text="Performance" FontSize="13" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Optimized system tweaks for maximum gaming FPS." FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#FF6B35" BorderThickness="1.5" Margin="8,0,8,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE770;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#FF6B35" Margin="0,0,8,0"/>
                                        <TextBlock Text="Organization" FontSize="13" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Clean, modern interface for easy navigation." FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="#0F111A" Padding="20" CornerRadius="12" BorderBrush="#4CAF50" BorderThickness="1.5" Margin="8,0,0,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                        <TextBlock Text="Simplicity" FontSize="13" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="One-click tweaks without complexity." FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="#0F111A" CornerRadius="14" Padding="24" BorderBrush="#FF6B35" BorderThickness="2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#FF6B35" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Created by GlobalShock" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Version 1.0.0 | For competitive gamers and performance enthusiasts" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        </Grid>
        
        <!-- Popup Overlay and Cache Result Popup -->
        <Grid x:Name="PopupOverlay" Background="#000000" Opacity="0.5" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid x:Name="CacheResultPopupContainer" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#1E222D" BorderBrush="#00A3FF" BorderThickness="2" CornerRadius="12" Padding="24" Width="420">
                <StackPanel>
                    <TextBlock x:Name="PopupTitle" FontSize="22" FontWeight="Bold" Foreground="#00A3FF" Margin="0,0,0,20" Text="Cache Cleared"/>
                    
                    <Border Background="#0D1117" BorderBrush="#2A3F5F" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,0,0,14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Foreground="#ECEFF1" FontSize="13">Files Deleted:</TextBlock>
                                <TextBlock Grid.Column="1" x:Name="FilesDeletedCount" Foreground="#4CAF50" FontSize="13" FontWeight="Bold" Text="0"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Foreground="#ECEFF1" FontSize="13">Files Remaining:</TextBlock>
                                <TextBlock Grid.Column="1" x:Name="FilesRemainingCount" Foreground="#FF9800" FontSize="13" FontWeight="Bold" Text="0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#1A2332" BorderBrush="#2A5A7F" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,20">
                        <TextBlock x:Name="PopupDescription" FontSize="12" Foreground="#A0AEC0" TextWrapping="Wrap" Text="Operation completed successfully." TextAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PopupOKButton" Style="{StaticResource PopupOKButtonStyle}" Content="OK" Padding="24,8" FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Generic Info Popup -->
        <Grid x:Name="InfoPopupOverlay" Background="#000000" Opacity="0.5" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid x:Name="InfoPopupContainer" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#1E222D" BorderBrush="#00A3FF" BorderThickness="2" CornerRadius="12" Padding="24" Width="500">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock x:Name="InfoPopupTitle" FontSize="22" FontWeight="Bold" Foreground="#00A3FF" Margin="0,0,0,20" Text="Information"/>
                    
                    <!-- Data Display Section with Grid Layout -->
                    <Border x:Name="InfoPopupDataGridBorder" Background="#0D1117" BorderBrush="#2A3F5F" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <StackPanel x:Name="InfoPopupDataGrid">
                                <!-- Dynamic grid items will be added here via PowerShell -->
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Message Section -->
                    <Border Background="#0D1117" BorderBrush="#2A3F5F" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                            <RichTextBox x:Name="InfoPopupMessage" FontSize="12" Foreground="#A0AEC0" Background="Transparent" BorderThickness="0" IsReadOnly="True" Padding="0"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Path Box Section (Hidden by default) -->
                    <StackPanel x:Name="PathBoxSection" Visibility="Collapsed" Margin="0,0,0,16">
                        <TextBlock Text="File Path:" FontSize="11" Foreground="#A0AEC0" Margin="0,0,0,8" FontWeight="SemiBold"/>
                        <Border Background="#0F111A" BorderBrush="#00A3FF" BorderThickness="1" CornerRadius="6" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" x:Name="PathBoxText" Text="Saved Games\Respawn\Apex\Local\" FontSize="11" Foreground="#4CAF50" FontFamily="Courier New" VerticalAlignment="Center" TextWrapping="Wrap" Margin="0,0,12,0"/>
                                <Button Grid.Column="1" x:Name="PathOpenButton" Style="{StaticResource PopupOKButtonStyle}" Content="Open" FontSize="9" Padding="8,6" MinWidth="60" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                    
                    <!-- OK Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="InfoPopupOKButton" Style="{StaticResource PopupOKButtonStyle}" Content="OK"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>